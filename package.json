{
  "name": "mintelligent",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "account": "yarn foundry:account",
    "account:generate": "yarn foundry:generate",
    "account:import": "yarn foundry:account-import",
    "account:reveal-pk": "yarn workspace @mintelligent/foundry account:reveal-pk",
    "chain": "yarn foundry:chain",
    "compile": "yarn foundry:compile",
    "deploy": "yarn foundry:deploy",
    "flatten": "yarn foundry:flatten",
    "fork": "yarn foundry:fork",
    "format": "yarn next:format && yarn foundry:format",
    "foundry:account": "yarn workspace @mintelligent/foundry account",
    "foundry:account-import": "yarn workspace @mintelligent/foundry account:import",
    "foundry:chain": "yarn workspace @mintelligent/foundry chain",
    "foundry:clean": "yarn workspace @mintelligent/foundry clean",
    "foundry:compile": "yarn workspace @mintelligent/foundry compile",
    "foundry:deploy": "yarn workspace @mintelligent/foundry deploy",
    "foundry:deploy-verify": "yarn workspace @mintelligent/foundry deploy:verify",
    "foundry:flatten": "yarn workspace @mintelligent/foundry flatten",
    "foundry:fork": "yarn workspace @mintelligent/foundry fork",
    "foundry:format": "yarn workspace @mintelligent/foundry format",
    "foundry:generate": "yarn workspace @mintelligent/foundry account:generate",
    "foundry:lint": "yarn workspace @mintelligent/foundry lint",
    "foundry:test": "yarn workspace @mintelligent/foundry test",
    "foundry:verify": "yarn workspace @mintelligent/foundry verify",
    "generate": "yarn foundry:generate",
    "postinstall": "husky install",
    "ipfs": "yarn workspace @mintelligent/nextjs ipfs",
    "lint": "yarn next:lint && yarn foundry:lint",
    "next:build": "yarn workspace @mintelligent/nextjs build",
    "next:check-types": "yarn workspace @mintelligent/nextjs check-types",
    "next:format": "yarn workspace @mintelligent/nextjs format",
    "next:lint": "yarn workspace @mintelligent/nextjs lint",
    "next:serve": "yarn workspace @mintelligent/nextjs serve",
    "precommit": "lint-staged",
    "start": "yarn workspace @mintelligent/nextjs dev",
    "test": "yarn foundry:test",
    "vercel": "yarn workspace @mintelligent/nextjs vercel",
    "vercel:login": "yarn workspace @mintelligent/nextjs vercel:login",
    "vercel:yolo": "yarn workspace @mintelligent/nextjs vercel:yolo",
    "verify": "yarn foundry:verify"
  },
  "devDependencies": {
    "husky": "~9.1.6",
    "lint-staged": "~13.2.2"
  },
  "packageManager": "yarn@3.2.3",
  "engines": {
    "node": ">=20.18.3"
  }
}
